<odoo>
    <data>
        <record model="ir.ui.view" id="show_bank_information_form_view">
			<field name="name">Show Bank Information</field>
			<field name="model">hr.employee.show.bank.information</field>
			<field name="arch" type="xml">
				<form string="Allow Show Bank Information">
					<header></header>
					<sheet>
                        <group>
                            <group>
                                <field name="name" placeholder="User"/>
                            </group>
                            <group></group>
						</group>
					</sheet>
				</form>
			</field>
		</record>

        <record model="ir.ui.view" id="show_bank_information_tree_view">
            <field name="name">Show Bank Information</field>
			<field name="model">hr.employee.show.bank.information</field>
			<field name="arch" type="xml">
				<tree string="Allow Show Bank Information" create="true" editable="top">
                    <field name="name"/>
				</tree>
			</field>
        </record>

        <record model="ir.actions.act_window" id="show_bank_information_list_action">
			<field name="name">Show Bank Information</field>
			<field name="res_model">hr.employee.show.bank.information</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="Help" type="html">
				<p class="oe_view_nocontent_create">
					Show Bank Information
				</p>
			</field>
		</record>
    </data>
</odoo>