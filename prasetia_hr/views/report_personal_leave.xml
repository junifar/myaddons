<odoo>
    <template id="report_personal_leave">
        <t t-set="data_report_margin_top" t-value="12"/>
        <t t-set="data_report_header_spacing" t-value="9"/>
        <t t-set="data_report_dpi" t-value="110"/>
        <t t-call="report.html_container">
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/admin-lte/2.3.11/css/AdminLTE.min.css" />
        <div class="page">
            <section class="invoice">
                <div class="row">
                    <div class="col-xs-12">
                      <h2 class="page-header">
                        <i class="fa fa-globe"></i> PT. Prasetia Dwidharma
                        <small class="pull-right">6 Juni 2017</small>
                      </h2>
                    </div>
                </div>
                <div class="row invoice-info">
                    <div class="col-sm-6 invoice-col">
                      <b>LAPORAN CUTI KARYAWAN</b><br/>
                      <br/>
                      <b>Noreg :</b> 110075<br/>
                      <b>Nama Karyawan :</b> <span t-esc="employee_name"/><br/>
                      <b>Periode :</b> Juni 2017
                    </div>
                    <div class="col-sm-6 invoice-col"/>
                </div>
                <div class="row">
                    <div class="col-xs-12 table-responsive">
                        <br/>
                        <table class="table table-striped table-condensed table-bordered">
                            <thead>
                            <tr>
                                <th>Tanggal</th>
                                <th>Jam Kerja</th>
                                <th>Masuk</th>
                                <th>Keluar</th>
                                <th>Jam Bekerja</th>
                                <th>Keterangan</th>
                            </tr>
                            </thead>
                            <tbody>
                                <t t-set="inc" t-value="1"/>
                                <t t-foreach="employee_absen" t-as="data">
                                     <tr>
                                        <td><span t-esc="data['name']"/> </td>
                                        <td>08:30 - 17:30</td>
                                        <td><span t-esc="data['absent_in']"/> </td>
                                        <td><span t-esc="data['absent_out']"/></td>
                                        <td><span t-esc="data['work_hours']"/></td>
                                        <td><span t-esc="data['note']"/></td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </div>
            </section>
        </div>
        </t>
    </template>
</odoo>